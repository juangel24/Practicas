<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/_1"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/_1"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/_2"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@+id/_2"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/_3"
        android:layout_toRightOf="@+id/_3"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/_4"
        android:layout_toLeftOf="@+id/_4"
        android:layout_marginBottom="50dp"
        />

    <Button
        android:id="@+id/_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>